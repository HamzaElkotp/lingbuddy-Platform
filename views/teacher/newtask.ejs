                            <div class="column is-three-fifths">
                                <div class="box">
                                    <div class="field">
                                        <label class="label has-text-weight-medium cus80">Put Recomendation URLs here or use <span class="cus60">LingBuddyAI</span> to generate them!</label>
                                        <div class="control">
                                            <textarea class="textarea" id="resTasktextarea" placeholder="Put Recomendation here or generate with LingBuddyAI"></textarea>
                                        </div>
                                    </div>
                                    <div class="field">
                                        <label class="label has-text-weight-medium cus80">Task Name</label>
                                        <div class="control">
                                            <input class="input" type="text" id="restaskName" placeholder="Task name" required>
                                        </div>
                                    </div>
                                    <div class="has-text-centered">
                                        <button class="button is-purpleGradedeg" id="sendResource">Send task to student/s <i class="fa-solid fa-arrow-right" style="font-size:12px; padding-left:5px"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>

            <label class="label has-text-weight-medium cus80">Step <span id="cstep">1</span> of <span id="fstep"></span></label>
        </div>
    </div>

    <%- include('../partials/phoneNavT.ejs') %>

</body>
</html>
