<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bulma.min.css"/>
<body>
    
    <div style="display: none" id="pageTitle">meetings</div>

    <%- include('../partials/desktopNavT.ejs') %>

    <div class="contentBox">
        <div class="theContent">
            <div class="is-flex is-marginless is-justify-content-space-between is-align-items-center">
                <h2 class="label is-3 has-text-weight-medium">Scheduled Meetings</h2>
                <div class="buttons is-margine-left">
                    <button class="button is-purpleGrade is-top-marginless-mins" workrole="showPopup" targeted="newMeetingPopUp"><i class="fa-solid fa-plus"></i> New Meeting</button>
                </div>
            </div>
            
                
            <div class="columns reportSection show meetings is-multiline" id="meetingsColmns">
                
            </div>
        </div>
        <div class="popup-overlay is-noShadow opacityAni dataPop is-width-fixed is-pg-center" id="newMeetingPopUp">
            <div class="popup-container">
                <div class="buttons">
                    <i class="fas fa-times" workrole="hidePopup" role="button"></i>
                </div>


                <div class="toolsSett">
                    <form id="newMeetingForm" class="aForm">
                        <div class="field">
                            <label class="label has-text-weight-medium cus60">Meeting Topic</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Enter Meeting Topic" required>
                            </div>
                        </div>
    
                        <div class="field">
                            <label class="label has-text-weight-medium cus60">Meeting Date</label>
                            <div class="control">
                                <input class="input" type="date" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label has-text-weight-medium cus60">Meeting Link</label>
                            <div class="control">
                                <input class="input" type="url" placeholder="Zoom, msTeams, Google meets... link" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label has-text-weight-medium cus60">Student</label>
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select name="student" id="selectStudent" required>
                                        <option value="la">Level A students</option>
                                        <option value="lb">Level B students</option>
                                        <option value="lc">Level C students</option>
                                    </select>
                                </div>
                            </div>
                        </div>
    
                        <div class="field">
                            <div class="control">
                                <button class="button cus60 is-fullwidth" id="loginBtn">Send New Meeting</button>
                            </div>
                        </div>
                        <p class="cus60 has-text-centered" id="info"></p>
                    </form>  
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/phoneNavT.ejs') %>

</body>
</html>
<script src='/models/main.js'></script>