<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>
<body>
    
    <div class="contentBox">
        <div class="columns is-centered">
            <div class="column is-two-fifths-desktop is-three-fifths-tablet isvertic">
                <h1 class="title is-size-3 has-text-weight-medium cus60">Login to LingBuddy Platform</h1>
                <form id="loginForm" class="aForm">
                    <div class="field">
                        <label class="label has-text-weight-medium cus60">Email</label>
                        <div class="control">
                            <input class="input" type="email" placeholder="Enter your Email" required>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label has-text-weight-medium cus60">Password</label>
                        <div class="control">
                            <input class="input" type="password" placeholder="Enter your password" required>
                        </div>
                    </div>

                    <div class="aSvg">
                        <embed src="/img/funarrow.svg" class="arrow" type="image/svg+xml" />
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button cus60 is-fullwidth" id="loginBtn">Continue Your Journey</button>
                        </div>
                    </div>
                    <p class="cus60 has-text-centered" id="info"></p>
                </form>  
            </div>
        </div>
    </div>
          
</body>
</html>
<script src='/models/main.js'></script>